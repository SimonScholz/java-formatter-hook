{
  "name": "java-formatter-hook",
  "private": true,
  "version": "1.0.0",
  "description": "ClientProject",
  "author": "Simon Scholz",
  "license": "UNLICENSED",
  "devDependencies": {
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "prettier": "^1.18.2",
    "prettier-plugin-java": "^0.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{md,java}": [
      "prettier --write",
      "git add"
    ]
  }
}
